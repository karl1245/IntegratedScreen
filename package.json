{
  "name": "integrated-screen",
  "author": "TÜ <tvp@tü.ee>",
  "description": "An integrated screen for real-time information",
  "version": "0.1.9",
  "license": "MIT",
  "main": "main.js",
  "build": {
    "appId": "com.tvp.IntegratedScreen",
    "productName": "IntegratedScreen",
    "files": [
      "dist/integrated-screen/**/*",
      "dist/**/*",
      "*.js",
      "build",
      "node_modules/**/*",
      "package.json",
      "main.js"
    ],
    "directories": {
      "output": "release",
      "buildResources": "dist"
    },
    "nsis": {
      "createDesktopShortcut": "always"
    },
    "asar": false,
    "win": {
      "publish": [
        {
          "provider": "github",
          "vPrefixedTagName": "true"
        }
      ],
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "publish": [
        {
          "provider": "github",
          "vPrefixedTagName": "true"
        }
      ],
      "target": {
        "target": "appimage",
        "arch": [
          "armv7l"
        ]
      }
    }
  },
  "scripts": {
    "ng": "ng",
    "release": "build",
    "start": "ng serve",
    "publish": "electron-builder --linux --publish always",
    "dist": "electron-builder -l",
    "postinstall": "install-app-deps",
    "build": "ng build --prod",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "electron": "electron .",
    "electron-build": "ng build --prod && electron .",
    "electron-package": "electron-packager . IntegratedScreen --platform=win32 --arch=x64"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~8.2.14",
    "@angular/cdk": "^8.2.3",
    "@angular/common": "~8.2.14",
    "@angular/compiler": "~8.2.14",
    "@angular/core": "~8.2.14",
    "@angular/forms": "~8.2.14",
    "@angular/material": "^8.2.3",
    "@angular/platform-browser": "~8.2.14",
    "@angular/platform-browser-dynamic": "~8.2.14",
    "@angular/router": "~8.2.14",
    "@mapbox/mapbox-gl-directions": "^4.0.3",
    "@ngmodule/material-carousel": "^0.5.1",
    "@types/mapbox-gl": "^0.54.5",
    "bootstrap": "^4.4.1",
    "electron-reload": "^1.5.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-updater": "^4.2.0",
    "https": "^1.0.0",
    "mapbox-gl": "^1.6.1",
    "ng-bootstrap": "^1.6.3",
    "rxjs": "~6.4.0",
    "tslib": "^1.9.0",
    "typescript": "~3.4.3",
    "zone.js": "~0.9.1",
    "express": "latest"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.801.2",
    "@angular/cli": "^8.3.22",
    "@angular/compiler-cli": "^8.2.14",
    "@angular/language-service": "~8.2.14",
    "@types/jasmine": "~3.3.8",
    "@types/jasminewd2": "^2.0.8",
    "@types/node": "~8.9.4",
    "codelyzer": "^5.2.1",
    "concurrently": "^5.0.2",
    "cross-var": "^1.1.0",
    "electron": "^7.1.8",
    "electron-builder": "^22.2.0",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~6.4.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.5.1",
    "protractor": "~5.4.0",
    "ts-node": "~7.0.0",
    "tslint": "~5.15.0",
    "typescript": "~3.4.3"
  }
}
